{
  "parser": "babel-eslint",
  "extends": [
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/eslint-recommended"
  ],
  "plugins": ["react", "prettier", "standard", "@typescript-eslint", "react-hooks"],
  "rules": {
    "prettier/prettier": "error",
    "semi": [
      2,
      "always"
    ],
    "no-unused-vars": [
      "off",
      {
        "vars": "local",
        "args": "none",
        "ignoreRestSiblings": false,
        "varsIgnorePattern": "React",
        "argsIgnorePattern": "^_",
        "caughtErrors": "none"
      }
    ]
  }
}
